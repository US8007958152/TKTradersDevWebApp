@{
    ViewData["Title"] = "Add Payment";
}
<div class="page-body">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5>Add Payment</h5>
                    <div class="card-header-right">
                        <i class="icofont icofont-rounded-down"></i>
                        <i class="icofont icofont-refresh"></i>
                        <i class="icofont icofont-close-circled"></i>
                    </div>
                </div>
                <div class="card-block">
                    <div class="j-wrapper j-wrapper-640">

                        <form method="post" class="j-pro" id="frmPaymentInfo" autocomplete="off" enctype="multipart/form-data" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="j-content">

                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">User</label>
                                        <label class="j-input j-select">
                                            <select id="ddlUser" asp-items="@ViewBag.ddlUser" required>
                                                <option value="" selected>-- Select --</option>
                                                <option value="-999">Other</option>
                                            </select>
                                            <span class="j-tooltip j-tooltip-right-top">Choose User</span>
                                            <i></i>
                                        </label>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">User Type</label>
                                        <label class="j-input j-select">
                                            <select id="ddlUserType" required>
                                                <option value="" selected>-- Select --</option>
                                                <option value="2">Customer</option>
                                                <option value="3">Dealer</option>
                                                <option value="5">Supplier</option>
                                                <option value="6">Truck Owner</option>
                                            </select>
                                            <span class="j-tooltip j-tooltip-right-top">Choose User Type</span>
                                            <i></i>
                                        </label>
                                    </div>
                                </div>

                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">User Mobile</label>
                                        <div class="j-input">
                                            <label class="j-icon-right" for="UserMobile">
                                                <i class="icofont icofont-phone"></i>
                                            </label>
                                            <input type="text" id="UserMobile" maxlength="10" required>
                                            <span class="j-tooltip j-tooltip-right-top">Enter User Mobile</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">Full Name</label>
                                        <div class="j-input">
                                            <label class="j-icon-right" for="UserName">
                                                <i class="icofont icofont-ui-user"></i>
                                            </label>
                                            <input type="text" id="UserName" required>
                                            <span class="j-tooltip j-tooltip-right-top">Enter Full Name</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">User Address</label>
                                        <div class="j-input">
                                            <label class="j-icon-right" for="UserAddress">
                                                <i class="icofont icofont-building"></i>
                                            </label>
                                            <input type="text" id="UserAddress">
                                            <span class="j-tooltip j-tooltip-right-top">Enter User Address</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">Transaction Type</label>
                                        <label class="j-input j-select">
                                            <select id="ddlTransactionType" required>
                                                <option value="" selected>-- Select --</option>
                                                <option value="1">Send</option>
                                                <option value="2">Receive</option>
                                            </select>
                                            <span class="j-tooltip j-tooltip-right-top">Choose Transaction Type</span>
                                            <i></i>
                                        </label>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">Amount</label>
                                        <div class="j-input">
                                            <label class="j-icon-right" for="Amount">
                                                <i class="icofont icofont-cur-rupee-true"></i>
                                            </label>
                                            <input type="text" id="Amount" onkeypress="return isNumberKey(event,this)" required>
                                            <span class="j-tooltip j-tooltip-right-top">Enter Amount</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="j-row">
                                    <div class="j-span12 j-unit">
                                        <label class="j-label">Comments</label>
                                        <div class="j-input">
                                            <label class="j-icon-right" for="Comments">
                                                <i class="icofont icofont-cur-rupee-true"></i>
                                            </label>
                                            <input type="text" id="Comments" required>
                                            <span class="j-tooltip j-tooltip-right-top">Enter Comments</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="j-footer">
                                <a asp-area="Securities" asp-controller="Payment" asp-action="GetPayments" class="btn btn-primary">Back</a>
                                <button type="button" class="btn btn-primary" id="btnPaymentSave">Save</button>
                                <button type="reset" id="btnPaymentReset" class="btn btn-default m-r-20">Reset</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section scripts{
    <script src=@Url.Content("~/UserScripts/Securities/Payment.js")></script>
}