@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" type="text/css" href=@Url.Content("~/FlatableAdmin/bower_components/chartist/dist/chartist.css")>
<style>
    .danger-border
    {
            border-top-color: #e74c3c;
    }
</style>
<div class="row">
     <div class="col-md-6 col-xl-3">
        <div class="card client-blocks success-border">
            <div class="card-block">
                <h5>Export Profit</h5>
                <ul>
                    <li>
                         <i class="icofont icofont-coins text-success"></i>
                    </li>
                    <li id="export-profit" class="text-right text-success">
                        0
                    </li>
                </ul>
            </div>
        </div>
    </div>
     
    <div class="col-md-6 col-xl-3">
        <div class="card client-blocks dark-primary-border">
            <div class="card-block">
                <h5>Transport Profit</h5>
                <ul>
                    <li>
                        <i class="icofont icofont-fast-delivery"></i>
                    </li>
                    <li id="transport-profit" class="text-right">
                        0
                    </li>
                </ul>
            </div>
        </div>
    </div>


    <div class="col-md-6 col-xl-3">
        <div class="card client-blocks warning-border">
            <div class="card-block">
                <h5>Truck Service Profit</h5>
                <ul>
                    <li>
                       <i class="icofont icofont-oil-truck text-warning"></i>
                    </li>
                    <li id="truck-service-profit" class="text-right text-warning">
                        0
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card client-blocks danger-border">
            <div class="card-block">
                <h5>Overall Loss</h5>
                <ul>
                    <li>
                        <i class="icofont icofont-coins text-danger"></i>
                    </li>
                    <li id="overall-loss" class="text-right text-danger">
                        0
                    </li>
                </ul>
            </div>
        </div>
    </div>
