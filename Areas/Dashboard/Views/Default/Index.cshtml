<div class="row">
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Order Count</h5>
                <span>The total number of order per product</span>
                <div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <i class="icofont icofont-refresh"></i>
                    <i class="icofont icofont-close-circled"></i>
                </div>
            </div>
            <div class="card-block">
                <canvas id="orderCount" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Export Product Profit</h5>
                <span>Total paid, unpaid, received and remaining payment</span>
                <div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <i class="icofont icofont-refresh"></i>
                    <i class="icofont icofont-close-circled"></i>
                </div>
            </div>
            <div class="card-block">
                <canvas id="productProfit" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Truck Amount</h5>
                <span>Total amount paid and received</span>
                <div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <i class="icofont icofont-refresh"></i>
                    <i class="icofont icofont-close-circled"></i>
                </div>
            </div>
            <div class="card-block">
                <canvas id="truckData" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
    
</div>

